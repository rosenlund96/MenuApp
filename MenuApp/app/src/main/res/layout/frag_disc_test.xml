<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Du vil blive præsenteret for en række udsagn. Udsagnene hører sammen i par. Du skal give hvert udsagt point fra 0 til 5. Summem af de to udsagn, skal altid være lig 5."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
                    android:paddingTop="10dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Her kommer der muligvis til at stå et meget langt og kluntet udsagn:"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView6"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="10dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="normal|bold|italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbarAlwaysDrawHorizontalTrack="false"
                            android:scrollbarAlwaysDrawVerticalTrack="false">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <ToggleButton
                                    android:text="0"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button14"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="0"
                                    android:textOn="0"
                                    android:checked="false" />

                                <ToggleButton
                                    android:text="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button13"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="1"
                                    android:textOn="1"/>

                                <ToggleButton
                                    android:text="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button12"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="2"
                                    android:textOn="2"/>

                                <ToggleButton
                                    android:text="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button11"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="3"
                                    android:textOn="3"/>

                                <ToggleButton
                                    android:text="4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button8"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="4"
                                    android:textOn="4"/>

                                <ToggleButton
                                    android:text="5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button5"
                                    android:scrollbarAlwaysDrawVerticalTrack="false"
                                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="5"
                                    android:textOn="5"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Her kommer der også til at stå et ekstremt langt og kluntet udsagn:"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/textView7"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:paddingTop="10dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textStyle="bold|italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <ToggleButton
                                    android:text="0"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button20"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="0"
                                    android:textOn="0"/>

                                <ToggleButton
                                    android:text="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button19"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="1"
                                    android:textOn="1"/>

                                <ToggleButton
                                    android:text="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button18"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="2"
                                    android:textOn="2"/>

                                <ToggleButton
                                    android:text="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button17"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="3"
                                    android:textOn="3"/>

                                <ToggleButton
                                    android:text="4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button16"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="4"
                                    android:textOn="4"/>

                                <ToggleButton
                                    android:text="5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button15"
                                    android:background="@drawable/button_primary_solid"
                                    android:backgroundTint="@color/common_action_bar_splitter"
                                    android:textOff="5"
                                    android:textOn="5"/>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.2">

            <TextView
                android:text="SUMMEN SKAL VÆRE 5!"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Alert"
                android:gravity="bottom|center_horizontal"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Næste"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:background="@drawable/button_next"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>